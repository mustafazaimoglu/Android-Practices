<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/userInterfaceDisplay"
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:ems="10"
        android:hint="0"
        android:inputType="text"
        android:paddingTop="40dp"
        android:paddingEnd="25dp"
        android:paddingBottom="30dp"
        android:textAlignment="textEnd"
        android:textSize="38sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/AC"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="3dp"
                android:layout_weight="1"
                android:backgroundTint="#ED2442"
                android:onClick="clearAll"
                android:text="AC"
                android:textSize="34sp" />

            <Button
                android:id="@+id/bolu"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="6dp"
                android:layout_weight="0"
                android:backgroundTint="#3a94e8"
                android:onClick="getValueOfOperatorButton"
                android:text="  /  "
                android:textSize="34sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/sayi7"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="3dp"
                android:layout_weight="1"
                android:backgroundTint="#3a94e8"
                android:onClick="getValueOfNumberButton"
                android:text="7"
                android:textSize="34sp" />

            <Button
                android:id="@+id/sayi8"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="3dp"
                android:layout_weight="1"
                android:backgroundTint="#3a94e8"
                android:onClick="getValueOfNumberButton"
                android:text="8"
                android:textSize="34sp" />

            <Button
                android:id="@+id/sayi9"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="3dp"
                android:layout_weight="1"
                android:backgroundTint="#3a94e8"
                android:onClick="getValueOfNumberButton"
                android:text="9"
                android:textSize="34sp" />

            <Button
                android:id="@+id/carpi"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="6dp"
                android:layout_weight="1"
                android:backgroundTint="#3a94e8"
                android:onClick="getValueOfOperatorButton"
                android:text="X"
                android:textSize="34sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/sayi4"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="3dp"
                android:layout_weight="1"
                android:backgroundTint="#3a94e8"
                android:onClick="getValueOfNumberButton"
                android:text="4"
                android:textSize="34sp" />

            <Button
                android:id="@+id/sayi5"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="3dp"
                android:layout_weight="1"
                android:backgroundTint="#3a94e8"
                android:onClick="getValueOfNumberButton"
                android:text="5"
                android:textSize="34sp" />

            <Button
                android:id="@+id/sayi6"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="3dp"
                android:layout_weight="1"
                android:backgroundTint="#3a94e8"
                android:onClick="getValueOfNumberButton"
                android:text="6"
                android:textSize="34sp" />

            <Button
                android:id="@+id/eksi"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="6dp"
                android:layout_weight="1"
                android:backgroundTint="#3a94e8"
                android:onClick="getValueOfOperatorButton"
                android:text="-"
                android:textSize="34sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/sayi1"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="3dp"
                android:layout_weight="1"
                android:backgroundTint="#3a94e8"
                android:onClick="getValueOfNumberButton"
                android:text="1"
                android:textSize="34sp" />

            <Button
                android:id="@+id/sayi2"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="3dp"
                android:layout_weight="1"
                android:backgroundTint="#3a94e8"
                android:onClick="getValueOfNumberButton"
                android:text="2"
                android:textSize="34sp" />

            <Button
                android:id="@+id/sayi3"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="3dp"
                android:layout_weight="1"
                android:backgroundTint="#3a94e8"
                android:onClick="getValueOfNumberButton"
                android:text="3"
                android:textSize="34sp" />

            <Button
                android:id="@+id/arti"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="6dp"
                android:layout_weight="1"
                android:backgroundTint="#3a94e8"
                android:onClick="getValueOfOperatorButton"
                android:text="+"
                android:textSize="34sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/nokta"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="3dp"
                android:layout_weight="1"
                android:backgroundTint="#3a94e8"
                android:onClick="getValueOfNumberButton"
                android:text="  .  "
                android:textSize="34sp" />

            <Button
                android:id="@+id/sayi0"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="3dp"
                android:layout_weight="18"
                android:backgroundTint="#3a94e8"
                android:onClick="getValueOfNumberButton"
                android:text="0"
                android:textSize="34sp" />

            <Button
                android:id="@+id/esittir"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="6dp"
                android:layout_weight="1"
                android:backgroundTint="#065EAF"
                android:onClick="calculateResult"
                android:text=" = "
                android:textSize="34sp" />
        </TableRow>

    </TableLayout>
</LinearLayout>